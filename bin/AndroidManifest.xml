<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grupocsi.btrmovil"
    android:versionCode="1"
    android:versionName="1.0"
    >
<!-- android:versionCode="9"
    android:versionName="1.0"  -->
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.grupocsi.btrmovil.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.grupocsi.btrmovil.Inicio"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.NoTitleBar" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.grupocsi.btrmovil.Informacion"
            android:label="@string/title_activity_informacion" 
            android:theme="@android:style/Theme.NoTitleBar" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.grupocsi.btrmovil.Login"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.grupocsi.btrmovil.Formulario"
            android:label="@string/title_activity_formulario" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.grupocsi.btrmovil.Identificacion"
            android:label="@string/title_activity_identificacion" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.grupocsi.btrmovil.Menu"
            android:label="@string/title_activity_menu" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.grupocsi.btrmovil.ConsultarExpedientes"
            android:label="@string/title_activity_consultar_expedientes" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.grupocsi.btrmovil.cropImages.CropImage"
            android:label="@string/title_activity_crop_image">
        </activity>
        <activity
            android:name="com.grupocsi.btrmovil.CropOptionAdapter"
            android:label="@string/title_activity_crop_option_adapter" >
        </activity>
        <activity
            android:name="com.grupocsi.btrmovil.ListDocsGuardados"
            android:label="@string/title_activity_list_docs_guardados" 
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>