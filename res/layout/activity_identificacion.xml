<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Identificacion"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/rLayoutHeader"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="#000000" >

        <Button
            android:id="@+id/btnAgregar"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/stylebtns"
            android:text="@string/btnHecho"
            android:textColor="#FF1300"
            android:textSize="12sp" />

    </RelativeLayout>

   	<GridView
   	    android:id="@+id/gVImagenes"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:layout_below="@+id/rLayoutHeader"
   	    android:gravity="center"
   	    android:horizontalSpacing="5dp"
   	    android:numColumns="1" 
   	    >

    </GridView>
</RelativeLayout>